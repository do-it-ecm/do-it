---
layout: layout/post.njk

eleventyImport:
  collections: ["PROJET"]

eleventyExcludeFromCollections: true

eleventyComputed:
  tags:
    - "{{ page.url | getYearFromUrl }}"
    - "index"
    - "PROJET"
  title: "Projets {{ page.url | getYearFromUrl }}"
  resume: "Projets de la Promotion {{ page.url | getYearFromUrl }}"
  eleventyNavigation:
    title: "Projets {{ page.url | getYearFromUrl }}"
    key: "{{ page.url }}"
    parent: "{{ page.url | parentUrl }}"
---

{% set year = page.url | getYearFromUrl %}
{# This is needed because eleventy does not load the collection before the computed data is computed #}
{% set projetsLoader = collections.PROJET | length %}

<div>
    <h1 class="text-3xl">Projets de la promotion {{ year }}</h1>
</div>

{% for projet in collections.PROJET | sort | reverse %}
    {% set yearMatches = false %}
    {% set isIndex = false %}
    {% for tag in projet.data.tags %}
        {% if tag == year %}
            {% set yearMatches = true %}
        {% elif tag == "index" %}
            {% set isIndex = true %}
        {% endif %}
    {% endfor %}
    {% if yearMatches and not isIndex %}
        <div class="my-3 px-2 p-1 border-solid border-2 rounded relative">
            <div class="text-3xl mb-3">
                <a href="{{ projet.url  }}">{{ projet.data.title }}</a>
            </div>

            <div class="px-4 flex flex-wrap items-center">
                <div>Auteurs : </div>
                <ul class="flex flex-wrap not-prose list-none my-1 mx-0 px-1 gap-1">
                {% for auteur in projet.data.authors | sort %}
                    <li class="bg-blue-200 rounded-full px-2">{{ auteur }}</li>
                {% endfor %}
                </ul>
            </div>

            <div class="pt-1 px-4 flex items-top">
                <div class="flex-none">Résumé : </div>
                <div class="pl-2 m-0 grow quote">
                {% if projet.data.résumé %}
                    {{ projet.data.résumé | safe }}
                {% else %}
                        <i>Aucun résumé de projet fourni pour le moment</i>
                {% endif %}
                </div>
            </div>
            

            <div class="hidden sm:block absolute top-0 right-0 bg-purple-200 rounded-full px-2 mt-2 mr-2">
                {{ year }}
            </div>
        </div>
    {% endif %}

{% endfor %}
