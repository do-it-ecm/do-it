{% macro renderNavigation(item) %}
<li>
    <div class="course-sidebar-item hover:bg-gray-200 bg-{% if item.backgroundColor %}{{ item.backgroundColor }}{% else %}white{% endif %}">
        <a {% if item.path %}href="/cs/{{ item.path }}"{% endif %} class="flex-1 text-left pr-2 text-lg">{{ item.title }}</a>
        {% if item.children and item.children | length > 0 %}
            <button class="course-sidebar-item-toggle-button" onclick="toggleFold(this)">&gt;</button>
        {% endif %}
    </div>
    {% if item.children and item.children | length > 0 %}
        <ul class="nested">
            {% for child in item.children %}
                {{ renderNavigation(child) }}
            {% endfor %}
        </ul>
    {% endif %}
</li>
{% endmacro %}
